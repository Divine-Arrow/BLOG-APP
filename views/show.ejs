<% include partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header"><%= blog.title%></div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui image rounded afterImage" src="<%= blog.image %>" alt="<%= blog.title + " image "%>">
                <div class="content"><span><%= blog.created.toDateString() %></span></div>
                <div class="description afterImage">
                    <p><%- blog.body %></p>
                </div>
                <a class="ui basic red button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
    </div>

