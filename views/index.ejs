<% include partials/header %>

    <div class="ui container">
        <h1>Index Page</h1>
        <% blogs.forEach(function(blog) { %>
            <h2><%= blog.title %></h2>
            <img src="<%= blog.image %>" alt="<%= blog.name + " image "%>">
            <span><%= blog.created %></span>
            <p><%= blog.body.substring(0,150) %>.......</p>
            <a href="/blogs/<%= blog._id%>">Read more</a>
            <% }); %>
    </div>

