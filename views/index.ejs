<% include partials/header %>


<div class="ui main text container">
    <div class="ui huge header">Homepage</div>
        <div class="ui divided items segment">
                
                    <% blogs.forEach(function(blog) { %>
                        <div class="item">
                        <div class="image">
                            <img class="image_cover" src="<%= blog.image %>" alt="<%= blog.title + " image "%>">
                        </div>
                        <div class="content">
                            <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title %></a>
                            <div class="meta">
                                <span><%= blog.created.toDateString()%></span>
                            </div>
                            <div class="description">
                                <p><%- blog.body.substring(0,100) %> ...</p>
                            </div>
                            <div class="extra">
                                <a class="ui label" href="/blogs/<%= blog._id%>">Read more</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
        </div>
<% include partials/fotter %>